{
  "name": "Member Stamp Sorter",
  "manifest_version": 2,
  "version": "1.0",
  "permissions": ["storage", "https://www.youtube.com/*"],
  "browser_action": {
    "default_title": "MemberStampSorter",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icon128.png"
    }
  },
  "icons": {
    "16":  "icon16.png",
    "48":  "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": ["jquery.min.js", "content_script.js"],
      "matches": ["https://www.youtube.com/live_chat*"],
      "all_frames": true
    }
  ],
  "applications": {
    "gecko": {
      "id": "memberstampsorter@mozilla.com",
      "strict_min_version": "55.0",
      "update_url": "https://raw.githubusercontent.com/ryosmusiclab/MemberStampSorter/firefox/updateInfo.xml"
    }
  }
}
